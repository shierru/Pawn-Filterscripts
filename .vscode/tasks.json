{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Build",
        "command": "${workspaceRoot}/compiler/pawncc",
        "type": "shell",
        "args": [
          "'-;+'",
          "'-(+'",
          "'-\\'",
          "'-Z+'",
          "'-d3'",
          "'-O1'",
          "'-t4'",
          "'-i${workspaceRoot}/include'",
          "'-i${workspaceRoot}/include/omp-stdlib'",
          "'-i${workspaceRoot}/include/YSI-Includes'",
          "'-i${workspaceRoot}/include/Map-Include'",
          "'-o${workspaceRoot}/server/filterscripts/script.amx'",
          "'${relativeFile}'"
        ],
        "problemMatcher": [],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      }
    ]
  }